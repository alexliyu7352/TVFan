<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000" >
    	
    <ProgressBar 
         android:id="@+id/play_progressbar"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:indeterminateDrawable="@drawable/progress_bar_rotate"
        android:indeterminateBehavior="repeat"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/tv_netspeed"
        android:layout_marginBottom="20dp"
        />
    <ImageView
        android:id="@+id/img"
        android:layout_width="48dp"
        android:layout_height="55dp"
        android:background="@drawable/g"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/tv_netspeed"
        android:layout_marginBottom="20dp"
        />
    <TextView
        android:id="@+id/tv_netspeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blue"
        android:text="0k/s"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="22sp"
        />
    <TextView
        android:id="@+id/loadinginfo0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:text="马不停蹄全力加速中....."
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_below="@id/tv_netspeed"
        />
    <TextView
        android:id="@+id/loadinginfo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:text="开始视频缓冲......."
        android:layout_centerHorizontal="true"
        android:layout_below="@id/loadinginfo0"
        />
</RelativeLayout>
